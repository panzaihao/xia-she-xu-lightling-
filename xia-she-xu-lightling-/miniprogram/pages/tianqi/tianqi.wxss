.content{
  font-family: 微软雅黑，宋体;
  font-size: 14px;
  background-size: cover;
  height:100%;
  width: 100%;
  
  color: #FFFF;
}
.info{
  padding: 20px;
  background: #FFFF;
  background: rgba(0, 0,0,0.5);
  box-shadow: 10px 10px 20px rgba(0, 0,0, 0.5)
}
.today{
  padding-top: 50rpx;
  height: 40%;

}
.city{
  color: white;
  font-size: 20px;
  text-align: right;
  margin-right: 10rpx;
  margin-top: 30rpx;

}
.temp{
  font-size: 50px;
  text-align: center; 
}
.weather{
   text-align: center; 
}
.future{
  display: flex;
  flex-direction: row;
  height: 40%;
  padding-left: 5rpx;
  background: #FFFF;
  background: rgba(0, 0,0, 0.1);

  box-shadow: 10px 10px 20px rgba(0, 0,0, 0.5);
  text-align: center;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
}
.future-item{
min-height: 100%;
width:265rpx;
margin-left: 10rpx;
margin-right: 10rpx;
border: 1px solid coral;
border-radius: 10px;
padding-top: 10rpx;
font-size: 20px;
}
.background{
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}